<!DOCTYPE html>
<html lang="fr">
    <head>
        <title>{% block title %}Cog Shop{% endblock %}</title>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="Content-Type" content="UTF-8">
        <meta name="Content-Language" content="fr">
        <meta name="Description" content="Cog-shop est une boutique en ligne de vêtements de créateur, steampunk et néo-victorien.  ">
        <meta name="Keywords" content="e-commerce, steampunk, victorien, vêtements, clothes, boutique, shop, cog, e-shop, ">
        <meta name="Author" content="wf3 groupe3">
        <meta name="Reply-To" content="t.datchy@laposte.net">
        <meta name="Revisit-After" content="1 day">
        <meta name="Robots" content="all">
        <meta name="Distribution" content="global">
        <meta name="Geography" content="strasbourg, france, 67">
        <meta name="Category" content="shopping">
        
        <!-- Primary meta tags -->
        <title>Cog-Shop</title>
        <meta name="title" content="Cog-Shop">
        <meta name="description" content="Cog-Shop, boutique en ligne Steampunk et Néo-victorien, vente en ligne de vêtements Steampunk en France métropolitaine..">

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website">
        <meta property="og:url" content="http://wf3cogshop.ovh/">
        <meta property="og:title" content="Cog-Shop">
        <meta property="og:description" content="Cog-Shop, boutique en ligne Steampunk et Néo-victorien, vente en ligne de vêtements Steampunk en France métropolitaine..">
        <meta property="og:image" content="">

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image">
        <meta property="twitter:url" content="http://wf3cogshop.ovh/">
        <meta property="twitter:title" content="Cog-Shop">
        <meta property="twitter:description" content="Cog-Shop, boutique en ligne Steampunk et Néo-victorien, vente en ligne de vêtements Steampunk en France métropolitaine..">
        <meta property="twitter:image" content="">

         
        {% block meta %}{% endblock %}

        <!-- Bootstrap CSS -->
        {% block stylesheets %}
            <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
            <link href="https://fonts.googleapis.com/css?family=Odibee+Sans&display=swap" rel="stylesheet"> 
            <link href="https://fonts.googleapis.com/css?family=Playfair+Display+SC&display=swap" rel="stylesheet"> 
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}

    </head>
    
    <body class="sb-nav-fixed">
        <div id="fb-root"></div>
        <script async defer crossorigin="anonymous" src="https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v6.0&appId=174919030507115&autoLogAppEvents=1"></script>
        {#Header#}
            {{ render(controller('App\\Controller\\CogShopController::header', { header_s: app.request.query.get('s') })) }}
        
        {#Sidebar#}
        <div id="layoutSidenav">

        
        {{ render(controller('App\\Controller\\CogShopController::sidebar')) }}
        
         

            <div id="layoutSidenav_content">
                <main>
                    {% block body %}
                        
                    {% endblock %}
                </main>

                {#Footer#}
                {{ render(controller('App\\Controller\\CogShopController::footer')) }}
            </div>
        </div>

        {% block javascripts %}
        <!-- Optional JavaScript -->
            <!-- jQuery first, then Popper.js, then Bootstrap JS -->
            <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
            <script src="{{asset("js/scripts.js")}}"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
            <script src="assets/demo/chart-area-demo.js"></script>
            <script src="assets/demo/chart-bar-demo.js"></script>
            <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
            <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
            <script src="{{asset("js/datatables-demo.js")}}"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
