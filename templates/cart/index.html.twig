{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
    <section class="container">
        <h1>Votre panier</h1>

        <div class="row">
            <div class="col">
            {% if items | lenght > 0  %}
                <table>
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Prix</th>
                            <th>Quantit√©</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                            <tr>
                                <td>{{ item.produit.nom  }}</td>
                                <td>{{ item.produit.prix  }}</td>
                                <td>{{ item.quantity }}</td>
                                <td>{{ item.produit.prix * item.quantity }}</td>
                                <td><a href="#" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-right">Total</td>
                            <td>{{ total }}</td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            {% else %}
                
            {% endif %}
                <p>
                
                </p>
            </div>
        </div>

    </section>
{% endblock %}
