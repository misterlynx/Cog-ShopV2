{% extends 'cog_shop/sidebarP.html.twig' %}

{% block title %}Panel Admin{% endblock %}

{% block body %}
{{ render(controller('App\\Controller\\CogShopController::headerP')) }}
<div class="row">
  <div class="col-3">
    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
      <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Infos</a>
      <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Historiques des commandes</a>
      <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">Modifier Pages</a>
      <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false">Options</a>
    </div>
  </div>
  <div class="col-9">
    <div class="tab-content" id="v-pills-tabContent">
      <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
      <h1>Vos informations : <br>
      Pseudonyme: {{ app.user.pseudonyme }} <br>
      Nom : {{ app.user.nom }} <br>
      Prénom : {{ app.user.prenom }} <br>
      Date De Naissance : {{ app.user.datenaissance|date("d/m/Y") }} <br>
      Département : {{ app.user.dp }} <br>
      Adresse : {{ app.user.adresse }} <br>
      Ville : {{ app.user.ville }} <br>
      Email : {{ app.user.email }} <br>
      </div>
      <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">Bonjour</div>
      <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">Bonsoir</div>
      <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">Saluit</div>
    </div>
  </div>
</div>
{% endblock %}