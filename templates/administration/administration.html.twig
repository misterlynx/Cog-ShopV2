{% extends "baseP.html.twig" %}

{% block title %}Panel Admin{% endblock %}

{% block body %}
<section class="container-fluid mt-5" style="color: antiquewhite;">
  <div class="row">
    <div class="col">
      <nav class="nav flex-column" id="v-pills-tab" role="tablist" aria-orientation="vertical">
          <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Infos</a>
          <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Historiques des récents membres</a>
          <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">Ajouter Produit</a>
      </nav>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="jumbotron bg-dark">
        <div class="tab-content" id="v-pills-tabContent">
          <div class="tab-pane fade show active text-light" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
            <h3 class="text-center">Vos informations : </h3>
              <article>
                <p><h4> Nom :</h4> {{ app.user.nom }}</p>
                <p><h4>Prénom :</h4> {{ app.user.prenom }}</p>
                <p><h4>Code Postal :</h4> {{ app.user.codepostal }}</p>
                <p><h4>Adresse :</h4> {{ app.user.adresse }}</p>
                <p><h4>Ville :</h4> {{ app.user.ville }}</p>
                <p><h4>Email :</h4> {{ app.user.email }}</p>
              </article>
          </div>

          <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">

          <div class="card-header text-light"></div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered text-light" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Nom</th>
                      <th>Prénom</th>
                    </tr>
                  </thead>
                  {% for inscrit in inscrit %}
                  <tbody>
                    <tr>
                      <td>{{ inscrit.nom }}</td>
                      <td>{{ inscrit.prenom }}</td>
                    </tr>
                  {% endfor %}
                  </tbody>
                  </table>
                </div>
              </div>
          </div>
          <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
            {# form pour ajouter un produit #} en cours... 
          </div>
        </div>
      </div>{# jumbotron#}
    </div>{# col-8#}
  </div>{# row#}
</section>


{% endblock %}