{% extends 'base.html.twig' %}

{% block title %}Hello Administrateur !{% endblock %}

{% block body %}
    <section class="container-fluid">
        <div class="container">
             <nav class="navbar navbar-expand-lg  bg-warning">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav m-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('accueil') }}">Accueil <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('administration') }}">Ajouter un produit</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="{{ path('shop') }}" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Shop
                        </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="{{ path('femme') }}">Femme</a>
                    <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="{{ path('homme') }}">Homme</a>
                    <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="{{ path('accessoires') }}">Accessoires</a>
                    </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('member') }}">Espace membre</a>
                    </li>
                    </ul>
                </div>
            </nav> 
        </div>
   
    <article class="container">
        <form method="POST" action="" class="jumbotron">
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label for="formGroupExampleInput">nom du produit</label>
                        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Steampunk" required>
                    </div>
                </div>
                <div class="col-6">
                     <div class="form-group">
                        <label for="exampleFormControlSelect1">Selectionnez la catégorie</label>
                        <select class="form-control" id="exampleFormControlSelect1">
                            <option value="choississez"></option>
                            <option value="femme" aria-required="true">Femme</option >
                            <option value="homme" aria-required="true">Homme</option>
                            <option value="accessoires" aria-required="true">Accessoires</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Entrez une description</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="beau vêtement... " required></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label for="exampleFormColor">Selectionnez la couleur</label> <br>
                        <input type="color" name="exempleFormColor" id="exampleFormColor" required>
                    </div>
                </div>
                <div class="col-4">
                    <label  for="form-check-inline" class="form-check-inline-label">Sa taille :</label> <br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
                        <label class="form-check-label" for="inlineRadio1">Unique</label>
                      </div>
                      <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
                        <label class="form-check-label" for="inlineRadio2">( S )</label>
                      </div>
                      <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3">
                        <label class="form-check-label" for="inlineRadio3">( M )</label>
                      </div><br>
                      <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio4" value="option4">
                        <label class="form-check-label" for="inlineRadio4">( L )</label>
                      </div>
                      <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio5" value="option5">
                        <label class="form-check-label" for="inlineRadio5">( XL )</label>
                      </div>
                      <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio6" value="option6">
                        <label class="form-check-label" for="inlineRadio6">( 2XL )</label>
                      </div>
                </div>
                <div class="col-4">
                    <div class="form-group text-right">
                        <label for="tentacles">Prix du produit :</label>
                        <input type="number" id="tentacles" name="tentacles" min="10" max="9999" placeholder="***€" required>
                    </div>
                </div>
            </div>
           <div class="row mt-5">
               <div class="col-6 offset-lg-3">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="validatedCustomFile" required>
                        <label class="custom-file-label" for="validatedCustomFile">Choisissez une image</label>
                        <div class="invalid-feedback">Example invalid custom file feedback</div>
                    </div>
               </div>
           </div>
           <div class="row mt-3">
               <div class="col-6 offset-lg-5">
                   <button type="button" class="btn-outline-success" [disabled]="!form.form.valid">mettre en ligne</button>
               </div>
           </div>
        </form>
    </article>
</section>

{% endblock %}
