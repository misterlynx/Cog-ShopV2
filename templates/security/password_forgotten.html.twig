{% extends "base.html.twig" %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="container py-5 text-light">
    <div class="row">
        <div class="col-md-6 col-lg-5 mx-auto text-center">
            <h1>Mot de passe oublié</h1>


            {% if not app.request.query.get('send') == 'ok' %}
            
            <form method="POST" class="my-5">
                <div class="form-group">
                    <label for="email"> Quelle est votre addresse email?</label>
                    <input type="email" name="email" id="email" class="form-control">
                </div>

                <div class="text-right">
                    <button class="submit" class="btn btn-primary"> Valider</button>
                </div>
            
            </form>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}