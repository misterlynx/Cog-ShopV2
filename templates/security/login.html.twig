{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <div class="container mt-5">
            <div class="row justify-content-center mt-5">
                <div class="col-md-7 mt-5">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                            <div class="card-body">
                                <form method="post">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}

                                    {% if app.user %}
                                        <div class="mb-3">
                                            You are logged in as {{ app.user.pseudonyme }}, <a href="{{ path('app_logout') }}">Logout</a>
                                        </div>
                                    {% endif %}

                                    {# <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1> #}
                                    <label for="inputPseudonyme">Pseudonyme</label>
                                    <input type="text" value="{{ last_username }}" name="pseudonyme" id="inputPseudonyme" class="form-control" required autofocus>
                                    <label for="inputPassword">Password</label>
                                    <input type="password" name="password" id="inputPassword" class="form-control mb-4" required>

                                    <input type="hidden" name="_csrf_token"
                                        value="{{ csrf_token('authenticate') }}"
                                    >

                                    {#
                                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                        See https://symfony.com/doc/current/security/remember_me.html

                                        <div class="checkbox mb-3">
                                            <label>
                                                <input type="checkbox" name="_remember_me"> Remember me
                                            </label>
                                        </div>
                                    #}
                                    <div class="col-md-12">
                                        <div class="form-group">
                                        <button class="btn btn-lg btn-warning btn-block text-center mb-3" type="submit">S'inscrire !</button>
                                            {# <button class="btn btn btn-warning btn-block mx-auto">S'inscrire !</button> #}
                                        </div>
                                    </div> 
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
